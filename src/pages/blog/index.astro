---
import Layout from '../../layouts/Layout.astro';
const posts = [
  {
    title: 'My First Blog Post',
    slug: 'first-post',
    excerpt: 'This is my first blog post! I\'m excited to share my thoughts.',
    date: '2024-01-15'
  },
  {
    title: 'Getting Started with Astro',
    slug: 'getting-started-astro',
    excerpt: 'Learn how to build fast websites with Astro.',
    date: '2024-01-20'
  }
];
---

<Layout title="Blog Posts">
  <h1>Blog Posts</h1>
  <div class="posts">
    {posts.map(post => (
      <article class="post-card">
        <h2>{post.title}</h2>
        <div class="post-date">{new Date(post.date).toLocaleDateString()}</div>
        <p>{post.excerpt}</p>
        <a href={`/blog/${post.slug}`} class="read-more">Read More</a>
      </article>
    ))}
  </div>
</Layout>

<style>
  h1 {
    margin-bottom: 2rem;
  }

  .posts {
    display: grid;
    gap: 2rem;
  }

  .post-card {
    padding: 1.5rem;
    border: 1px solid #eee;
    border-radius: 8px;
  }

  .post-card h2 {
    margin-bottom: 0.5rem;
    color: var(--accent);
  }

  .post-date {
    color: #666;
    font-size: 0.9rem;
    margin-bottom: 1rem;
  }

  .read-more {
    display: inline-block;
    margin-top: 1rem;
    color: var(--accent);
    text-decoration: none;
  }

  .read-more:hover {
    text-decoration: underline;
  }
</style>
